generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql" // Change to "sqlite" if using SQLite
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default("USER") // USER, ADMIN, DELIVERY
  orders    Order[]

  @@index([email])
  @@index([role])
  @@index([createdAt])
}

model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  items       Item[]
  totalAmount Float
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([userId, status])
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  image       String?
  orders      Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([price])
  @@index([name])
}

enum Role {
  USER
  ADMIN
  DELIVERY
}

// Removed enum Role - using String instead for SQLite compatibility
